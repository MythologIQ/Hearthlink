# ============================================================================
# HEARTHLINK ENVIRONMENT CONFIGURATION
# ============================================================================
# This is the canonical environment file for all Hearthlink services.
# SECURITY: Never commit this file to version control with real values.
# Use .env.example as template for new environments.
# ============================================================================

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
NODE_ENV=development
DEBUG=true
LOG_LEVEL=info

# ============================================================================
# FRONTEND CONFIGURATION (React)
# ============================================================================
# Development server port (React dev server)
PORT=3005
BROWSER=none
FAST_REFRESH=false
GENERATE_SOURCEMAP=false

# React app environment variables
REACT_APP_ENV=development
REACT_APP_HEARTHLINK_API=http://localhost:8000/api
REACT_APP_CLAUDE_CODE=true

# Grafana Integration
REACT_APP_GRAFANA_URL=http://localhost:3000
REACT_APP_GRAFANA_API_KEY=your_grafana_api_key_here
REACT_APP_GRAFANA_ORG_ID=1

# ============================================================================
# BACKEND API CONFIGURATION
# ============================================================================
# Backend API server port
API_PORT=8000
API_HOST=localhost
CORS_ORIGIN=http://localhost:3005

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# Primary SQLite database
DATABASE_URL=sqlite:///hearthlink_data/hearthlink.db

# PostgreSQL configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=hearthlink
POSTGRES_USER=hearthlink_user
POSTGRES_PASSWORD=your_secure_password_here

# PGVector configuration for semantic memory
PGVECTOR_HOST=localhost
PGVECTOR_PORT=5432
PGVECTOR_DATABASE=hearthlink_vectors
PGVECTOR_USER=hearthlink_user
PGVECTOR_PASSWORD=hearthlink_secure_pass_2025
PGVECTOR_URL=postgresql://hearthlink_user:hearthlink_secure_pass_2025@localhost:5432/hearthlink_vectors

# Vector embedding settings
EMBEDDING_DIMENSION=384
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
DEFAULT_SIMILARITY_THRESHOLD=0.7
DEFAULT_MAX_RESULTS=10
HYBRID_SEARCH_KEYWORD_WEIGHT=0.3
HYBRID_SEARCH_SEMANTIC_WEIGHT=0.7

# PGAdmin (optional)
PGADMIN_PASSWORD=admin_secure_2025

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# ============================================================================
# NEO4J GRAPH DATABASE
# ============================================================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
# JWT tokens
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key_here
SESSION_SECRET=your_session_secret_here

# ============================================================================
# EXTERNAL API KEYS
# ============================================================================
# AI Services
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
REACT_APP_GEMINI_API_KEY=your_gemini_api_key_here

# Voice & Audio
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
WHISPER_API_KEY=your_whisper_api_key_here

# ============================================================================
# CLOUDFLARE WORKERS CONFIGURATION
# ============================================================================
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id_here

# ============================================================================
# MONITORING & ANALYTICS
# ============================================================================
SENTRY_DSN=your_sentry_dsn_here

# ============================================================================
# DEVELOPMENT TOOLS
# ============================================================================
# Service health check endpoints
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Debug features
ENABLE_API_DOCS=true
ENABLE_SWAGGER=true
ENABLE_PLAYGROUND=true