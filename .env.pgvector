# PGVector Database Configuration for Hearthlink Semantic Memory
# Copy to .env or source this file before running docker-compose

# PostgreSQL Database Settings
PGVECTOR_PASSWORD=hearthlink_secure_pass_2025
PGVECTOR_HOST=localhost
PGVECTOR_PORT=5432
PGVECTOR_DATABASE=hearthlink_vectors
PGVECTOR_USER=hearthlink_user

# PGAdmin Settings (optional, for database management)
PGADMIN_PASSWORD=admin_secure_2025

# Connection String for Application
PGVECTOR_URL=postgresql://hearthlink_user:hearthlink_secure_pass_2025@localhost:5432/hearthlink_vectors

# Vector Embedding Settings
EMBEDDING_DIMENSION=384
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Semantic Search Configuration
DEFAULT_SIMILARITY_THRESHOLD=0.7
DEFAULT_MAX_RESULTS=10
HYBRID_SEARCH_KEYWORD_WEIGHT=0.3
HYBRID_SEARCH_SEMANTIC_WEIGHT=0.7