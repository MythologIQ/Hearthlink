# Hearthlink Environment Configuration
# Copy this file to .env and configure your settings

# Database Configuration
POSTGRES_PASSWORD=hearthlink_secure_2025
REDIS_PASSWORD=hearthlink_redis_2025
NEO4J_PASSWORD=hearthlink_neo4j_2025

# Database URLs (for application connection)
DATABASE_URL=postgresql://alden:hearthlink_secure_2025@localhost:5432/hearthlink
REDIS_URL=redis://:hearthlink_redis_2025@localhost:6379/0
QDRANT_URL=http://localhost:6333
NEO4J_URL=bolt://neo4j:hearthlink_neo4j_2025@localhost:7687

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080
API_SECRET_KEY=your_secret_key_here_change_in_production

# Hearthlink API Endpoints
REACT_APP_HEARTHLINK_API=http://localhost:8080/api
HEARTHLINK_API_BASE_URL=http://localhost:8080/api

# LLM Backend Configuration
LLM_BACKEND=claude_code  # Options: claude_code, local_llm, openai, anthropic
CLAUDE_CODE_ENABLED=true
LOCAL_LLM_ENABLED=true
OLLAMA_BASE_URL=http://localhost:11434

# Local LLM Models
LOCAL_LLM_MODEL=llama3.2:latest
EMBEDDING_MODEL=nomic-embed-text:latest

# External API Keys (Optional)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# React App Configuration
REACT_APP_ENV=development
REACT_APP_CLAUDE_CODE=true
REACT_APP_GEMINI_API_KEY=your_gemini_api_key_here

# Security Configuration
ENCRYPTION_KEY=your_encryption_key_here_32_chars_min
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# Vault Configuration
VAULT_ENCRYPTION_ENABLED=true
VAULT_DATA_PATH=./vault_data
MEMORY_ENCRYPTION_KEY=your_memory_encryption_key_here

# Voice System Configuration
VOICE_ENABLED=true
TTS_ENABLED=true
STT_ENABLED=true
VOICE_MODEL=whisper-1

# Development Configuration
DEBUG=true
LOG_LEVEL=INFO
DEVELOPMENT_MODE=true

# Performance Configuration
MAX_MEMORY_SLICES_PER_QUERY=100
EMBEDDING_CACHE_SIZE=1000
CONNECTION_POOL_SIZE=10

# File Storage
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760  # 10MB

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://your-domain.com