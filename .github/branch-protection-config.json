{
  "protection": {
    "required_status_checks": {
      "strict": true,
      "checks": [
        {"context": "security-scan"},
        {"context": "dependency-check"},
        {"context": "semantic-tests (alden, basic)"},
        {"context": "semantic-tests (alden, advanced)"},
        {"context": "semantic-tests (alice, basic)"},
        {"context": "semantic-tests (alice, advanced)"},
        {"context": "semantic-tests (sentry, basic)"},
        {"context": "semantic-tests (sentry, advanced)"},
        {"context": "semantic-tests (mimic, basic)"},
        {"context": "semantic-tests (mimic, advanced)"},
        {"context": "multi-agent-sync-tests"},
        {"context": "performance-benchmarks"},
        {"context": "e2e-integration"},
        {"context": "deployment-validation"}
      ]
    },
    "enforce_admins": true,
    "required_pull_request_reviews": {
      "required_approving_review_count": 2,
      "dismiss_stale_reviews": true,
      "require_code_owner_reviews": true,
      "require_last_push_approval": true,
      "bypass_pull_request_allowances": {
        "users": [],
        "teams": ["hearthlink-core-team"],
        "apps": []
      }
    },
    "restrictions": {
      "users": ["mythologiq-admin"],
      "teams": ["hearthlink-core-team", "hearthlink-security-team"],
      "apps": []
    },
    "required_linear_history": true,
    "allow_force_pushes": false,
    "allow_deletions": false,
    "block_creations": false,
    "required_conversation_resolution": true,
    "lock_branch": false,
    "allow_fork_syncing": true
  },
  "stakeholder_approval": {
    "environment": "production-approval",
    "required_reviewers": [
      "mythologiq-cto",
      "hearthlink-lead-architect", 
      "security-team-lead"
    ],
    "wait_timer": 0,
    "prevent_self_review": true,
    "deployment_branch_policy": {
      "protected_branches": true,
      "custom_branch_policies": false
    }
  },
  "quality_gates": {
    "test_coverage_threshold": 80,
    "security_scan_required": true,
    "performance_regression_threshold": 0.2,
    "documentation_required": true,
    "changelog_required": true
  }
}