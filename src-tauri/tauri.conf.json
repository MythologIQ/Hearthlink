{
  "productName": "Hearthlink Native",
  "version": "1.3.0",
  "identifier": "com.hearthlink.native",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev:react",
    "devUrl": "http://localhost:3005",
    "frontendDist": "../build",
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "identifier": "com.hearthlink.native",
    "publisher": "Hearthlink Development Team",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../src/**/*.py",
      "../config/**/*.json",
      "../hearthlink_data/**/*",
      "../requirements.txt",
      "../requirements_full.txt"
    ],
    "externalBin": [
      "python3",
      "python"
    ],
    "copyright": "Copyright Â© 2025 Hearthlink Development Team. All rights reserved.",
    "category": "Productivity",
    "shortDescription": "AI Orchestration System with Multi-Agent Architecture",
    "longDescription": "Advanced AI Orchestration System featuring multiple AI agents (Alden, Vault, Core, Synapse), voice interaction capabilities, and comprehensive project management tools. Single-click native Windows application with automatic service orchestration.",
    "appimage": {
      "bundleMediaFramework": false
    },
    "deb": {
      "depends": ["python3", "python3-pip", "python3-venv"],
      "priority": "optional",
      "section": "utils"
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "exceptionDomain": "localhost",
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "tsp": false,
      "wix": {
        "language": "en-US",
        "template": "main.wxs",
        "fragmentPaths": [],
        "componentGroupRefs": [],
        "componentRefs": [],
        "featureGroupRefs": [],
        "featureRefs": [],
        "mergeRefs": [],
        "skipWebviewInstall": false,
        "enableElevatedUpdateTask": false,
        "bannerPath": null,
        "dialogImagePath": null,
        "foldersToRemove": []
      },
      "nsis": {
        "template": "installer.nsi",
        "headerImage": null,
        "sidebarImage": null,
        "installerIcon": "icons/icon.ico",
        "installMode": "both",
        "allowDowngrades": true,
        "allowToChangeInstallationDirectory": true,
        "compressionLevel": "high",
        "displayLanguageSelector": false,
        "languages": ["English"],
        "customLanguageFiles": {},
        "requestExecutionLevel": "user"
      }
    }
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Hearthlink - AI Orchestration System",
        "width": 1400,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 700,
        "center": true,
        "resizable": true,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "fullscreen": false,
        "transparent": false,
        "maximized": false,
        "visible": true,
        "focus": true
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' data: blob: ws: wss: http://localhost:* https://localhost:*; connect-src 'self' ws: wss: http://localhost:* https://localhost:* https://api.openai.com https://api.anthropic.com"
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true,
        "execute": true,
        "sidecar": true,
        "scope": ["python", "python3", "python.exe", "src/main.py", "src/api/*"]
      },
      "path": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": ["$APPDATA/*", "$LOCALDATA/*", "$DOCUMENT/*", "$DOWNLOAD/*", "$CACHE/*", "$RESOURCE/*"]
      },
      "process": {
        "all": false,
        "exit": true,
        "relaunch": true
      },
      "protocol": {
        "all": false,
        "asset": true,
        "assetScope": ["$APPDATA/*", "$LOCALDATA/*", "$RESOURCE/*"]
      },
      "http": {
        "all": false,
        "request": true,
        "scope": ["http://localhost:*", "https://localhost:*", "ws://localhost:*", "wss://localhost:*"]
      },
      "notification": {
        "all": true
      },
      "globalShortcut": {
        "all": true
      },
      "dialog": {
        "all": false,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      },
      "window": {
        "all": false,
        "create": true,
        "center": true,
        "requestUserAttention": true,
        "setResizable": true,
        "setTitle": true,
        "maximize": true,
        "minimize": true,
        "show": true,
        "hide": true,
        "close": true,
        "setDecorations": true,
        "setShadow": true,
        "setEffects": true,
        "setVisibleOnAllWorkspaces": true,
        "setContentProtection": true,
        "print": true
      }
    },
    "updater": {
      "active": false,
      "endpoints": [],
      "dialog": false,
      "pubkey": ""
    },
    "systemTray": {
      "iconPath": "icons/icon.png"
    }
  }
}