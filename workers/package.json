{
  "name": "hearthlink-workers-api",
  "version": "1.0.0",
  "description": "Hearthlink Cloudflare Workers API - Secure, globally distributed REST API",
  "main": "src/index.js",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:production": "wrangler deploy --env production", 
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "build": "npm run lint && npm run test",
    "tail": "wrangler tail",
    "kv:create": "wrangler kv:namespace create SESSIONS && wrangler kv:namespace create CACHE && wrangler kv:namespace create RATE_LIMITS",
    "kv:list": "wrangler kv:namespace list",
    "secret:put": "wrangler secret put",
    "secret:list": "wrangler secret list"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20241106.0",
    "itty-router": "^5.0.18",
    "jose": "^5.2.0",
    "bcryptjs": "^2.4.3"
  },
  "devDependencies": {
    "wrangler": "^3.80.7",
    "jest": "^29.7.0",
    "jest-environment-miniflare": "^2.14.2",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "@types/jest": "^29.5.12",
    "typescript": "^5.4.2"
  },
  "keywords": [
    "cloudflare-workers",
    "api",
    "hearthlink",
    "ai-orchestration",
    "edge-computing",
    "serverless"
  ],
  "author": "Hearthlink Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/WulfForge/Hearthlink.git",
    "directory": "workers"
  }
}